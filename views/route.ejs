<md-content ng-controller="RouteController" ng-init="loadRoute('<%= id %>')">
	<md-card md-theme-watch>
		<md-card-title>
			<md-card-title-text>
				<span class="md-headline">
					<h1>Route: {{:: route.title_ru }}</h1>
				</span>
			</md-card-title-text>
			<md-card-title-media>
				<div class="md-media-md card-media">
					<img class="img-thumb img-circle" ng-src="/images/placeholder.png" actual-src="{{ route.imageThumb.url() }}" />
				</div>
			</md-card-title-media>
		</md-card-title>
		
	</md-card>

	<!-- Place -->
	<md-tabs md-dynamic-height md-border-bottom md-selected="data.selectedIndex">
		<md-tab label="Places">
			<md-content class="md-padding">
				<h3 class="md-display-0">Places</h3>
				<md-table-container>
					<table md-table md-progress="promise">
						<thead md-head class="toolBarRouteRelation">
							<tr md-row>
								<th md-column></th>
								<th md-column>Title</th>
								<th md-column>Period</th>
								<th md-column>Status</th>
								<th md-column>Created At</th>
								<th name="Actions">
							</tr>
						</thead>
						<tbody md-body>
							<tr md-row ng-repeat="place in relationsPlaces">
								<td md-cell>
									<img class="img-categRelationPlace img-circle" ng-src="/images/placeholder.png" actual-src="{{ place.imageThumb.url() }}"
									/>
								</td>
								<td md-cell>{{:: place.title_ru }}</td>
								<td md-cell>{{:: place.startPeriod | date:'y'}} - {{:: place.endPeriod | date:'y'}}</td>
								<td md-cell>
									<span class="label" ng-class="{ 'green': place.getStatus() === 'Approved',
          								'red': place.getStatus() === 'Rejected',
          								'orange': place.getStatus() === 'Expired',
          							  'yellow': place.getStatus() === 'Pending' }">
										{{ place.getStatus() }}
									</span>
								</td>
								<td md-cell>{{ place.createdAt | date:'mediumDate' }}</td>
								<td md-cell>
									<md-menu>
										<md-button aria-label="Open menu" class="md-icon-button" ng-click="openMenu($mdOpenMenu, $event)">
											<ng-md-icon md-menu-origin icon="more_vert" layout="row" layout-align="start center">
											</ng-md-icon>
										</md-button>
										<md-menu-content width="3">
											<md-menu-item>
												<md-button aria-label="Edit route" ng-click="onEditRoutePlace(place)">
													Edit
												</md-button>
											</md-menu-item>
											<md-menu-item aria-label="Delete place">
												<md-button aria-label="Delete place" ng-click="onDestroySinglePlace($event, place, route)">
													Delete
												</md-button>
											</md-menu-item>
										</md-menu-content>
									</md-menu>
								</td>
							</tr>
						</tbody>
				</md-table-container>
				</table>
				<md-table-pagination md-options="rowOptions" md-limit="query.limit" md-page="query.page" md-total="{{query.total}}" md-on-paginate="onPaginationChange">
				</md-table-pagination>
			</md-content>
		</md-tab>
		<!-- Stories -->

		<md-tab label="Stories">
			<md-content class="md-padding">
				<h3 class="md-display-0">Stories</h3>
				<md-table-container>
					<table md-table md-progress="promise">
						<thead md-head class="toolBarRouteRelation">
							<tr md-row>
								<th md-column>Title</th>
								<th md-column>Period</th>
								<th md-column>Created At</th>
								<th md-column>View</th>
								<th name="Actions">
							</tr>
						</thead>
						<tbody md-body>
							<tr md-row ng-repeat="story in relationsStories">
								<td md-cell>{{:: story.name }}</td>
								<td md-cell>{{:: story.startPeriod | date:'y'}} - {{:: story.endPeriod | date:'y'}}</td>
								<td md-cell>{{ story.createdAt | date:'mediumDate' }}</td>
								<td md-cell>


									<md-menu>
										<md-button aria-label="Open menu" class="md-icon-button" ng-click="openMenu($mdOpenMenu, $event)">
											<ng-md-icon md-menu-origin icon="more_vert" layout="row" layout-align="start center">

											</ng-md-icon>
										</md-button>

										<md-menu-content width="2">
											<md-menu-item>
												<md-button aria-label="Edit route" ng-click="onEditRouteStory(story)">
													Edit
												</md-button>
											</md-menu-item>


											</md-menu-item>
											<md-menu-item aria-label="Delete story">
												<md-button aria-label="Delete story" ng-click="onDestroySingleStory($event, story, route)">
													Delete
												</md-button>
											</md-menu-item>
										</md-menu-content>
									</md-menu>
								</td>
							</tr>
						</tbody>
					</table>
				</md-table-container>
				<md-table-pagination md-options="rowOptions" md-limit="query.limit" md-page="query.page" md-total="{{query.total}}" md-on-paginate="onPaginationChange">
				</md-table-pagination>
			</md-content>
		</md-tab>
	</md-tabs>
	<md-button class="md-fab md-primary md-fab-bottom-right" aria-label="New" ng-click="onAdd($event)">
		<ng-md-icon class="icon-add" icon="add" layout="column" layout-align="center center">
		</ng-md-icon>
	</md-button>
</md-content>